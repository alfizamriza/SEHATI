<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E5F3E5"
    android:padding="30dp"
    tools:context=".AdminActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="70dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvWelcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:fontFamily="@font/montserat_extrabold"
            android:text="Halo, Admin"
            android:textColor="#333333"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnDaftarGuru"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_masuk"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/montserat_bold"
            android:text="Daftar Guru"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnDaftarKantin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_masuk"
            android:backgroundTint="@color/green"
            android:fontFamily="@font/montserat_bold"
            android:text="Daftar Kantin"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp" />

        <Button
            android:id="@+id/btnLogout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_masuk"
            android:backgroundTint="@android:color/darker_gray"
            android:fontFamily="@font/montserat_bold"
            android:text="Logout"
            android:textColor="@color/white" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>