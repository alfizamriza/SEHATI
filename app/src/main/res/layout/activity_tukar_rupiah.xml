<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E0F2F1">

    <!-- Header Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="start|center_vertical"
        android:layout_marginBottom="16dp">

        <ImageButton
            android:id="@+id/btnKembali"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="?attr/selectableItemBackground"
            android:src="@drawable/ic_back"
            android:contentDescription="Kembali"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tukar ke Rupiah"
            android:textColor="#000000"
            android:textSize="20sp"
            android:fontFamily="@font/montserat_black"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Saldo Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total Koin"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/montserat_bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/textTotalKoin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0 koin"
        android:textSize="20sp"
        android:textColor="#000000"
        android:fontFamily="@font/montserat_extrabold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jumlah Rupiah"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/montserat_bold"
        android:layout_marginBottom="4dp"/>

    <TextView
        android:id="@+id/txtAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp 0"
        android:textSize="24sp"
        android:textColor="#000000"
        android:fontFamily="@font/montserat_extrabold"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Keterangan: 1000 koin = Rp 5.000"
        android:textSize="14sp"
        android:textColor="#666666"
        android:fontFamily="@font/montserat_black"
        android:layout_marginBottom="16dp"/>

    <!-- GridLayout for Exchange Buttons -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:columnCount="2"
        android:layout_marginBottom="16dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/btn50k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/orange"
            android:text="Rp 50.000"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/montserat_bold"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn100k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/orange"
            android:text="Rp 100.000"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/montserat_bold"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn200k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/orange"
            android:text="Rp 200.000"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/montserat_bold"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn500k"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/orange"
            android:text="Rp 500.000"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/montserat_bold"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn1m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/orange"
            android:text="Rp 1.000.000"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/montserat_bold"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn2m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/orange"
            android:text="Rp 2.000.000"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/montserat_bold"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn5m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/orange"
            android:text="Rp 5.000.000"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/montserat_bold"
            android:padding="12dp"/>

        <Button
            android:id="@+id/btn10m"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:backgroundTint="@color/orange"
            android:text="Rp 10.000.000"
            android:textColor="#FFFFFF"
            android:textSize="14sp"
            android:fontFamily="@font/montserat_bold"
            android:padding="12dp"/>

    </GridLayout>

    <!-- Exchange Button -->
    <Button
        android:id="@+id/btnExchange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:paddingTop="12dp"
        android:paddingBottom="12dp"
        android:text="Tukar Sekarang"
        android:backgroundTint="@color/orange"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/montserat_bold"
        android:elevation="4dp"/>

</LinearLayout>